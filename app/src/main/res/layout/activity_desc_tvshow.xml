<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tvshow_desc_photo"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvshow_desc_rating"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvshow_desc_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/textView4"
        android:fontFamily="@font/montserratmedium"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/tvshow_desc_name" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserratextrabold"
        android:text="@string/duration"
        app:layout_constraintStart_toEndOf="@+id/tvshow_desc_photo"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tvshow_desc_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/montserratextrabold"
        app:layout_constraintStart_toEndOf="@+id/tvshow_desc_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvshow_desc_name"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserratextrabold"
        android:text="@string/rating"
        app:layout_constraintStart_toEndOf="@+id/tvshow_desc_photo"
        app:layout_constraintTop_toBottomOf="@+id/tvshow_desc_name" />

    <TextView
        android:id="@+id/tvshow_desc_duration"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvshow_desc_rating"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textView6"
        android:fontFamily="@font/montserratmedium"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/tvshow_desc_rating" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="64dp"
        android:text="@string/overview"
        android:fontFamily="@font/montserratextrabold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvshow_desc_photo" />

    <TextView
        android:id="@+id/tvshow_desc_desc"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:fontFamily="@font/montserratmedium"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>